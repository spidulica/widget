<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/row_item"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginEnd="10dp"
    android:layout_marginStart="10dp"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    android:background="@color/card_background"
    android:layout_weight="1.0"
    android:orientation="vertical">

    <LinearLayout
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:id="@+id/selected_card_line"
        android:layout_width="2dp"
        android:layout_height="wrap_content"
        android:background="@color/card_background"
        android:orientation="vertical"
        android:layout_toEndOf="@+id/interval"
        android:layout_alignTop="@+id/info"
        android:layout_alignBottom="@+id/info" />

    <LinearLayout
        android:layout_alignBottom="@+id/info"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:id="@+id/interval"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/profesor"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:gravity="center"
            android:textColor="@color/card_text"
            android:text="9" />

        <TextView
            android:id="@+id/end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:gravity="center"
            android:textColor="@color/card_text"
            android:text="10" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/card_black_vertical_line"
        android:layout_width="2dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:background="@color/background_widget"
        android:orientation="vertical"
        android:layout_toEndOf="@+id/interval"
        android:layout_alignTop="@+id/info"
        android:layout_alignBottom="@+id/info" />

    <LinearLayout
        android:id="@+id/info"
        android:paddingLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:orientation="vertical"
        android:layout_alignParentEnd="true"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:layout_toEndOf="@+id/card_black_vertical_line">
        <TextView
            android:id="@+id/materie"
            android:textSize="15sp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/card_text"
            android:gravity="start"
            android:text="materie"
            />

        <TextView
            android:id="@+id/locatie"
            android:paddingTop="3dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:textColor="@color/card_text"
            android:text="locatie"
            android:textSize="13sp"/>

        <TextView
            android:id="@+id/profesor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:text="profesor"
            android:textColor="@color/card_text"
            android:textSize="11sp"
            />
    </LinearLayout>
</RelativeLayout>